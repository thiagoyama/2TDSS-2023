@model List<Personagem>

@{
    ViewData["Title"] = "Index";
}

<h1>Personagens</h1>

<a asp-action="cadastrar">Cadastrar</a>
<table class="table">
    <tr>
        <th>Codigo</th>
        <th>Nome</th>
        <th>Capa</th>
        <th>Nível Energia</th>
        <th>Data Criação</th>
        <th></th>
    </tr>
    @foreach (var item in Model)
    {
        <tr>
            <td>@item.Id</td>
            <td>@item.Nome</td>
            <td>@item.Capa</td>
            <td>@item.NivelEnergia</td>
            <td>@item.DataCriacao</td>
            <td>
                <a asp-action="editar" asp-route-id="@item.Id">Editar</a>
            </td>
        </tr>
    }
</table>

