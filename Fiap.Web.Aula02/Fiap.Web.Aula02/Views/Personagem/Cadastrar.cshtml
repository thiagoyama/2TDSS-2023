@model Personagem

@{
    ViewData["Title"] = "Cadastrar";
}

<h1>Cadastro de Personagem</h1>

@ViewBag.mensagem

<form asp-action="cadastrar">
    <div class="mb-3">
        <label asp-for="Nome"></label>
        <input asp-for="Nome" class="form-control" />
    </div>
    <div class="mb-3">
        <label asp-for="NivelEnergia"></label>
        <input asp-for="NivelEnergia" class="form-control" />
    </div>
    <div class="mb-3">
        <label asp-for="DataCriacao"></label>
        <input asp-for="DataCriacao" class="form-control" />
    </div>
    <div class="mb-3">
        <input asp-for="Capa" />
        <label asp-for="Capa"></label>
    </div>
    <button class="btn btn-success">Cadastrar</button>
</form>

