@model Personagem

@{
    ViewData["Title"] = "Editar";
}

<h1>Edição de Personagem</h1>

<a asp-action="Index">Lista de Personagem</a>

<form asp-action="editar">
    <div class="mb-3">
        <label asp-for="Nome"></label>
        <input asp-for="Nome" class="form-control" />
    </div>
    <div class="mb-3">
        <label asp-for="NivelEnergia"></label>
        <input asp-for="NivelEnergia" class="form-control" />
    </div>
    <div class="mb-3">
        <label asp-for="DataCriacao"></label>
        <input asp-for="DataCriacao" class="form-control" />
    </div>
    <div class="mb-3">
        <input asp-for="Capa" />
        <label asp-for="Capa"></label>
    </div>
    <button class="btn btn-success">Editar</button>
</form>

